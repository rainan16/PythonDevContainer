{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask in devcontainer",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app/main.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--host","0.0.0.0",
                "--port","9000",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}